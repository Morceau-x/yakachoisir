
@{
    ViewBag.Title = "ModifyEvent";
}

<fieldset>

    <legend>Modifier un évènement</legend>
    <div>
        @Html.LabelFor(model => model.Name)
        @Html.TextBoxFor(model => model.Name)
    </div>

    <div>
        @Html.LabelFor(model => model.DateBegin)
        @Html.TextBoxFor(model => model.DateBegin)
    </div>

    <div>
        @Html.LabelFor(model => model.Hour)
        @Html.TextBoxFor(model => model.Hour)
    </div>

    <div>
        @Html.LabelFor(model => model.Duration)
        @Html.TextBoxFor(model => model.Duration)
    </div>

    <br />

    <input type="submit" value="Modifier" />

</fieldset>

