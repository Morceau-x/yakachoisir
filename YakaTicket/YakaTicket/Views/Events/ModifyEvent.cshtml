@model YakaTicket.Models.Event

@{
    ViewBag.Title = "ModifyEvent";
}

@using (Html.BeginForm())
{
<fieldset>
    <legend>Modifier un évènement</legend>
    <div>
        Nom
        @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Name)
    </div>
    <div>
        Description
        @Html.TextBoxFor(model => model.Description, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Description)
    </div>
    <div>
        Début de l'évènement : <i>jj/mm/aaaa hh:mm:ss</i>
        @Html.TextBoxFor(model => model.Begin, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Begin)
    </div>
    <div>
        Fin de l'évènement : <i>jj/mm/aaaa hh:mm:ss</i>
        @Html.TextBoxFor(model => model.End, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.End)
    </div>
    <div>
        Lieu
        @Html.TextBoxFor(model => model.Location, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Location)
    </div>
    <div>
        Fermeture des inscriptions : <i>jj/mm/aaaa hh:mm:ss</i>
        @Html.TextBoxFor(model => model.Close, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Close)
    </div>
    <div>
        Nombre de places pour les externes au groupe IONIS
        @Html.TextBoxFor(model => model.ExternPlaces, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.ExternPlaces)
    </div>
    <div>
        Nombre de places pour les internes au groupe IONIS
        @Html.TextBoxFor(model => model.InternPlaces, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.InternPlaces)
    </div>
    <div>
        Prix places pour les externes au groupe IONIS
        @Html.TextBoxFor(model => model.InternPrice, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.InternPrice)
    </div>
    <div>
        Prix places pour les internes au groupe IONIS
        @Html.TextBoxFor(model => model.InternPrice, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.InternPrice)
    </div>
    <div>
        Afficher le nombre de places restantes
        @Html.RadioButton("blah", !Model.LeftPlaces) Oui
        @Html.RadioButton("blah", Model.LeftPlaces) Non
        @Html.ValidationMessageFor(model => model.InternPrice)
    </div>
    <input type="submit" value="Modifier l'évènement" class="form-control" />
</fieldset>
}
