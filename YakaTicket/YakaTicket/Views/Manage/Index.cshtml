            </dl>



            <h5>Historique</h5>
            <table class="table table-bordered table-hover">
                <tr>
                    <th>Nom</th>
                    <th>Association</th>
                    <th>Date Début</th>
                    <th>Date de fin</th>
                    <th>Billet</th>
                </tr>
                @foreach (var e in ViewBag.History)
                {
                    <tr>
                        <td>@e.Name</td>
                        <td>@e.Assoc</td>
                        <td>@e.Begin</td>
                        <td>@e.End</td>
                        <td>@Html.ActionLink("télécharger", "DownloadPDF", new { ev = e.Name })</td>
                    </tr>
                }
            </table>
</div>
